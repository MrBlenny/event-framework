{
  "name": "event-framework",
  "description": "The framework",
  "version": "0.0.2-4",
  "license": "MIT",
  "keywords": [
    "library"
  ],
  "scripts": {
    "start": "nodemon -w src -e ts -x ts-node",
    "test": "jest src",
    "test:coverage": "yarn test --coverage",
    "lint": "tslint --project tsconfig.json",
    "release": "cd build && yarn release",
    "build": "bash -v -e scripts/build.bash",
    "build:link": "yarn build && cd build && yarn link",
    "preversion": "yarn lint && yarn build && yarn test:coverage",
    "version": "version-changelog CHANGELOG.md && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@types/jest": "^21.1.10",
    "@types/koa": "^2.0.43",
    "@types/koa-router": "^7.0.27",
    "@types/node": "^8.5.2",
    "@types/node-fetch": "^1.6.7",
    "changelog-verify": "^1.1.0",
    "jest": "^22.0.4",
    "nodemon": "^1.14.3",
    "ts-jest": "^22.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "tslint-config-temando": "^1.5.0",
    "typescript": "^2.6.2",
    "version-changelog": "^2.1.0"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/chalk": "^0.4.31",
    "@types/koa-bodyparser": "^3.0.26",
    "@types/qs": "^6.5.1",
    "bluebird": "^3.5.0",
    "chalk": "^2.1.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.3.0",
    "node-fetch": "^1.7.3",
    "qs": "^6.5.1",
    "uuid": "^3.1.0"
  }
}
